CEKEXPIRED() {
    today=$(date -d +1day +%Y-%m-%d)
    Exp1=$(curl -sS https://raw.githubusercontent.com/rendyap100/sshmaxfix/main/izinnya | grep $MYIP | awk '{print $3}')
